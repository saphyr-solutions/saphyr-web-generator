                        </figure>
                    {% endif %}

                    <p class="text-muted">{{ current_page.text|snl2br|raw }}</p>

                    {% if current_page.files %}
                        <ul class="list-unstyled py-5 mt-5 border-top">
                            {% for file in current_page.files %}
                            <li><a href="{{ asset(file) }}" target="_blank">{{ file.client_name }}</a></li>
                            {% endfor %}
                        </ul>
                    {% endif %}

