            <div class="row justify-content-center">
                <div class="col-12 col-md-10 col-lg-9 col-xl-8">
                    <h1 class="display-4 mb-10">{{ current_page.title|snl2br|raw }}</h1>

                    {% if current_page.image %}
                        <figure class="figure mb-7">
                            <img class="figure-img img-fluid rounded lift lift-lg" src="{{ asset(current_page.image) }}"
