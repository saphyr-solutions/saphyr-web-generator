{% import "/macros/tool.html.twig" as macros %}

<a data-gallery class="card card-flush mb-7 {{ macros.getBlocClasses(current_bloc) }}" style="{{ macros.getStyles(current_bloc, "")|trim }}" {{ macros.getEditableBloc(current_bloc) }} data-aos="fade-up" data-aos-delay="200" href="{{ asset(current_bloc.values.image) }}">
    <!-- Image -->
    <div class="card-zoom">
        <img src="{{ asset(current_bloc.values.image) }}" title="{{ current_bloc.values.title.value }}" class="card-img-top rounded shadow-light-lg">
    </div>

    <!-- Footer -->
    <div class="card-footer">
        {% if current_bloc.values.title.value %}
            <!-- Preheading -->
            <h6 class="text-uppercase mb-1 text-muted">{{ current_bloc.values.title.value }}</h6>
        {% endif %}
        {% if current_bloc.values.text.value %}
            <!-- Heading -->
            <h4 class="mb-0">{{ current_bloc.values.text.value }}</h4>
        {% endif %}
    </div>
</a>