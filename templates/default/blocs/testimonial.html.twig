<div class="card card-row shadow-light-lg {{ current_bloc.classes|join(" ") }}" data-aos="fade-up" data-aos-delay="200">
    <div class="row gx-0">
        <a class="col-12 col-md-6 bg-cover card-img-start" style="background-image: url({{ asset(current_bloc.image) }});" href="#">

            <!-- Image (placeholder) -->
            <img class="img-fluid d-md-none invisible" src="{{ asset(current_bloc.image) }}" alt="{{ current_bloc.image.client_name }}">

            <!-- Shape -->
            <div class="shape shape-end shape-fluid-y text-white d-none d-md-block">
                <svg viewBox="0 0 112 690" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M116 0H51v172C76 384 0 517 0 517v173h116V0z" fill="currentColor"></path></svg>
            </div>
        </a>
        <div class="col-12 col-md-6 order-md-1">

            <!-- Body -->
            <div class="card-body">
                <blockquote class="blockquote mb-0 text-center">

                    <!-- Text -->
                    <p class="mb-5 mb-md-7">
                        “{{ current_bloc.text|snl2br|raw }}”
                    </p>

                    <!-- Footer -->
                    <footer class="blockquote-footer">
                        <span class="h6 text-uppercase">{{ current_bloc.author }}</span>
                    </footer>

                </blockquote>
            </div>
        </div>
    </div>
</div>