{% macro drawSubmenu(page,current_page) %}


    {% if page.haveSubmenu %}
        <ul class="dropdown-menu ps-sm-4" aria-labelledby="navbar_{{ page.id }}">
            {% if page.values.url.value !='#' %}
            <li class="dropdown-item">
                <a class="dropdown-link  {% if page.values.url.value == current_page.values.url.value %}active{% endif %}"

                   href="/{{ page.values.url.value }}">{{ page.values.menu.value }}</a>

                {% endif %}
            </li>
            {% for page in page.submenu %}
                <li class="dropdown-item dropend">
                    <a class="{% if page.values.url.value == current_page.values.url.value %}active {% endif %}dropdown-link {{ page.haveSubmenu ? 'dropdown-toggle':'' }}" {{ page.haveSubmenu ? 'data-bs-toggle="dropdown"':'' }}
                       href="/{{ page.values.url.value }}">
                        {{ page.values.menu.value }}
                    </a>
                    {% if page.haveSubmenu %}
                        {{ _self.drawSubmenu(page,current_page) }}
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    {% else %}
    {% endif %}
{% endmacro %}
<nav class="navbar fixed-top navbar-light navbar-expand-lg bg-white">
    <div class="container">
        {% if current_page.values.logo.value %}
            <a href="/" class="navbar-brand"><img src="{{ asset(current_page.values.logo) }}" alt="{{ web.values.title.value }}" class="navbar-brand-img"></a>
        {% elseif web.values.logo.value %}
            <a href="/" class="navbar-brand"><img src="{{ asset(web.values.logo) }}" alt="{{ web.values.title.value }}" class="navbar-brand-img"></a>
        {% elseif web.values.title.value %}
            <h1 class="navbar-brand"><a href="/">{{ web.values.title.value }}</a></h1>
        {% endif %}

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarCollapse">
            <button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fe fe-x"></i>
            </button>
            <ul class="navbar-nav ms-auto">
                {% for page in menu %}
                    <li class="nav-item {{ page.haveSubmenu ? 'dropdown':'' }}">
                        <a class="nav-link  {{ page.haveSubmenu ? 'dropdown-toggle':'' }} {% if page.values.url.value == current_page.values.url.value %}active{% endif %}"
                                {% if page.haveSubmenu %}
                                    id="navbar_{{ page.id }}" data-bs-toggle="dropdown" href="{{ page.values.url.value ? '/' ~ page.values.url.value:'#'}}" aria-haspopup="true" aria-expanded="false"
                                {% endif %}
                           href="/{{ page.values.url.value }}">{{ page.values.menu.value }}</a>
                        {% if page.haveSubmenu %}

                            {{ _self.drawSubmenu(page,current_page) }}

                        {% endif %}
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</nav>