<footer class="py-8 py-md-11 bg-gray-200">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-4 col-lg-3">
                <!-- Brand -->
                {% if web.values.logo.value %}
                    <img src="{{ asset(web.values.logo) }}" alt="{{ web.values.title.value }}" class="footer-brand img-fluid mb-2">
                {% endif %}

                <!-- Social -->
                <ul class="list-unstyled list-inline list-social mb-6 mb-md-0">
                    {% if web.values.twitter.value %}
                        <li class="list-inline-item list-social-item me-3">
                            <a href="{{ web.values.twitter.value }}" class="text-decoration-none">
                                <img src="{{ asset("assets/dist/img/icons/social/twitter.svg") }}" class="list-social-icon">
                            </a>
                        </li>
                    {% endif %}
                    {% if web.values.facebook.value %}
                        <li class="list-inline-item list-social-item me-3">
                            <a href="{{ web.values.facebook.value }}" class="text-decoration-none">
                                <img src="{{ asset("assets/dist/img/icons/social/facebook.svg") }}" class="list-social-icon">
                            </a>
                        </li>
                    {% endif %}
                    {% if web.values.instagram.value %}
                        <li class="list-inline-item list-social-item me-3">
                            <a href="{{ web.values.instagram.value }}" class="text-decoration-none">
                                <img src="{{ asset("assets/dist/img/icons/social/instagram.svg") }}" class="list-social-icon">
                            </a>
                        </li>
                    {% endif %}
                    {% if web.values.linkedin.value %}
                        <li class="list-inline-item list-social-item me-3">
                            <a href="{{ web.values.linkedin.value }}" class="text-decoration-none">
                                <img src="{{ asset("assets/dist/img/icons/social/linkedin.svg") }}" class="list-social-icon">
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </div>

            <div class="col">
                <!-- List -->
                <ul class="list-unstyled text-muted mb-6 mb-md-8 mb-lg-0">
                    {% for page in menu|slice(0,5) %}
                        <li>
                            <a href="/{{ page.values.url.value }}" class="text-reset">{{ page.values.menu.value }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div> <!-- / .row -->

        <div class="row mt-5 pt-5 border-top border-gray-300 text-gray-500">
            <div class="col">
                {% if web.values.copyright.value %}
                    {{ web.values.copyright.value|raw }}
                {% else %}
                    &copy; Copyright <strong><span>{{ web.values.title.value }}</span></strong>
                {% endif %}
            </div>
            <div class="col text-end">
                by <a href="https://www.saphyr-solutions.com" target="_blank">Saphyr Solutions</a>
            </div>
        </div>

    </div> <!-- / .container -->
</footer>