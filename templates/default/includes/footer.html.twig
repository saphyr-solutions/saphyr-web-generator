{% macro drawFooterSubmenu(page,current_page) %}


    {% if page.haveSubmenu %}
        <ul class="list-unstyled text-muted mb-6 mb-md-8 mb-lg-0 ps-4">

            {% for page in page.submenu %}
                <li >
                    <a class="{% if page.values.url.value == current_page.values.url.value %}active {% endif %}text-reset"  href="/{{ page.values.url.value }}">
                        {{ page.values.menu.value }}
                    </a>
                    {% if page.haveSubmenu %}
                        {{ _self.drawFooterSubmenu(page,current_page) }}
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    {% else %}
    {% endif %}
{% endmacro %}

<footer class="py-8 py-md-11 bg-gray-200">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-4 col-lg-3">
                <!-- Brand -->
                {% if web.values.logo.value %}
                    <img src="{{ asset(web.values.logo) }}" alt="{{ web.values.title.value }}" class="footer-brand img-fluid mb-2">
                {% endif %}

                <!-- Social -->
                <ul class="list-unstyled list-inline list-social mb-6 mb-md-0">
                    {% if web.values.twitter.value %}
                        <li class="list-inline-item list-social-item me-3">
                            <a href="{{ web.values.twitter.value }}" class="text-decoration-none" target="_blank">
                                <img alt="" src="{{ asset("assets/dist/img/icons/social/twitter.svg") }}" class="list-social-icon">
                            </a>
                        </li>
                    {% endif %}
                    {% if web.values.facebook.value %}
                        <li class="list-inline-item list-social-item me-3">
                            <a href="{{ web.values.facebook.value }}" class="text-decoration-none" target="_blank">
                                <img alt="" src="{{ asset("assets/dist/img/icons/social/facebook.svg") }}" class="list-social-icon">
                            </a>
                        </li>
                    {% endif %}
                    {% if web.values.instagram.value %}
                        <li class="list-inline-item list-social-item me-3">
