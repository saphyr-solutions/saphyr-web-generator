{% import "/macros/tool.html.twig" as macros %}

{% macro drawFooterSubmenu(page,current_page) %}
    {% if page.childrens|length > 0 %}
        <ul class="list-unstyled text-muted mb-6 mb-md-8 mb-lg-0 ps-4">
            {% for page in page.childrens %}
                <li>
                    <a class="{% if page.values.url.value == current_page.values.url.value %}active {% endif %}text-reset" {% if page.values.url.value=='#' %} onclick="return false"{% endif %} href="{{ href(page.values.url.value)|spaceless }}"{% if page.values.target.value %} target="{{ page.values.target.value }}"{% endif %}>
                        {{ page.values.menu.value }}
                    </a>
                    {% if page.childrens|length > 0 %}
                        {{ _self.drawFooterSubmenu(page,current_page) }}
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endmacro %}

