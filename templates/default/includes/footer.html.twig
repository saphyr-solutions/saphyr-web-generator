                    {% for page in menu %}
                        {% if page.visible or "footer-1" in page.show_in|keys%}
                        <li>
                            <a href="/{{ page.values.url.value }}" class="text-reset">{{ page.values.menu.value }}</a>
                            {% if page.haveSubmenu %}
                                {{ _self.drawFooterSubmenu(page,current_page) }}
                            {% endif %}
                        </li>
                        {% endif %}
                    {% endfor %}

                                    {% for page in footer_menu %}
                                        {% if "footer-2" in page.show_in%}
